@model Art.Web.Areas.Admin.Models.ReportsModel

@{
    ViewBag.Title = "Reports";
}

<div class="row row-first box-noborder">
    <div class="span12">
        <div class="row">
            <div class="span7">
                <div style="margin: 10px 0 40px 10px; padding: 20px 30px;">
                    <h2>Reports</h2>
                    <br />
                    <p>
                        Art Shop total record counts are below.
                    </p>
                    <br />
                    <br />
                    <table class="table" style="width: 400px;">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Records</th>
                                <th>View</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Users</td>
                                <td>&nbsp;&nbsp;@Model.UserCount</td>
                                <td><a class="btn btn-small" href="/reports/users"><i class="icon-list"></i> &nbsp;Details</a></td>
                            </tr>
                            <tr>
                                <td>Orders</td>
                                <td>&nbsp;&nbsp;@Model.OrderCount</td>
                                <td><a class="btn btn-small" href="/reports/orders"><i class="icon-list"></i> &nbsp;Details</a></td>
                            </tr>
                            <tr>
                                <td>Products</td>
                                <td>&nbsp;&nbsp;@Model.ProductCount</td>
                                <td><a class="btn btn-small" href="/reports/products"><i class="icon-list"></i> &nbsp;Details</a></td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>


            <div class="span5">
                <div style="margin: 40px 40px 0 20px; padding:30px 30px 60px 30px; background: #f5f5f5;">
                    <h4>Art Shop Revenues</h4>
                    <br />
                    <div class="well" style="font-size:20pt;">
                        @string.Format("{0:C0}", Model.TotalRevenues ?? 0) &nbsp;<span style="font-size:12pt;">(total)</span>
                    </div>
                    <div class="well" style="font-size:20pt;">
                        @string.Format("{0:C0}", Model.LastWeekRevenues ?? 0) &nbsp;<span style="font-size:12pt;">(last week)</span>
                    </div>
                    <br />
                </div>
            </div>

        </div>
    </div>

</div>
